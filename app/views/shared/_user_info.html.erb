<%= following_user_path(current_user.id) %>
<div class="col-md-4">
  <%= link_to gravatar_for(current_user, size: 80), current_user %>
</div>
<div class="col-md-8">
  <h3><%= current_user.name %></h3>
  <span><%= link_to "view my profile", current_user %></span>
  <span><%= pluralize(current_user.microposts.count, "micropost") %></span>
</div>