<% # app/controllers/users_controller.rb %>
<%= form_for(@user, url: yield(:form_url)) do |f| %>
<% # app/views/shared/_error_messages.html.erb %>
  <%= render 'shared/error_messages', object: f.object %>
  <%= f.label :name %>
  <%= f.text_field :name, placeholder: 'Firstname Lastname', class: 'form-contol' %>

  <%= f.label :email %>
  <%= f.email_field :email, placeholder: 'example@mailprovider.com', class: 'form-contol' %>

  <%= f.label :password %>
  <%= f.password_field :password, placeholder: 'Must be at least 6 characters long', class: 'form-contol' %>

  <%= f.label :password_confirmation, 'Confirmation', class: 'form-contol' %>
  <%= f.password_field :password_confirmation, placeholder: 'Repeat the password', class: 'form-contol' %>

  <%= f.submit yield(:button_text), class: 'btn btn-primary' %>
<% end %>